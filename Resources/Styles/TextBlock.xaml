<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:keys="clr-namespace:Black_Hole.Resources.Keys">

    <Style 
        TargetType="TextBlock">

        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Noto Sans"/>
    </Style>

    <Style x:Key="{x:Static keys:StyleResourcesKeys.ToolTipTextBlockStyleKey}"
           TargetType="{x:Type TextBlock}">

        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="{x:Static keys:StyleResourcesKeys.OptionsTextBlockStyleKey}"
           TargetType="{x:Type TextBlock}">

        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Playfair Display"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>